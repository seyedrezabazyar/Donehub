{
    "name": "modules/auth",
    "description": "Secure API-only authentication module for Laravel 12 using Fortify + Sanctum with full OTP support",
    "type": "laravel-module",
    "license": "MIT",
    "authors": [
        {
            "name": "Auth Module Team",
            "email": "auth@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/fortify": "^1.21",
        "laravel/sanctum": "^4.0",
        "nwidart/laravel-modules": "^11.0",
        "propaganistas/laravel-phone": "^5.1",
        "predis/predis": "^2.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23"
    },
    "suggest": {
        "twilio/sdk": "For international SMS support via Twilio",
        "kavenegar/php": "For Iranian SMS support via Kavenegar"
    },
    "autoload": {
        "psr-4": {
            "Modules\\Auth\\": "."
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Modules\\Auth\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Modules\\Auth\\Providers\\AuthServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
