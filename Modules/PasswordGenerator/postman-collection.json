      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"length\": 16,\n    \"include_numbers\": true,\n    \"include_lowercase\": true,\n    \"include_uppercase\": true,\n    \"include_symbols\": true\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/password-generator/generate",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "password-generator", "generate"]
        }
      }
